#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running quality gates before push..."
echo ""

# Run linting
echo "ğŸ“‹ Checking linting..."
npm run lint:ci
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Run 'npm run lint:fix' to fix issues."
  exit 1
fi

# Run all tests
echo ""
echo "ğŸ§ª Running all tests..."
npm run testFinal
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Fix failing tests before pushing."
  exit 1
fi

# Check coverage
echo ""
echo "ğŸ“Š Checking test coverage..."
npm run test:coverage -- --passWithNoTests
if [ $? -ne 0 ]; then
  echo "âŒ Coverage check failed. Ensure adequate test coverage."
  exit 1
fi

# Check npm audit
echo ""
echo "ğŸ” Checking security vulnerabilities..."
npm audit --audit-level=moderate
if [ $? -ne 0 ]; then
  echo "âš ï¸  Security vulnerabilities found. Run 'npm audit fix' if possible."
  exit 1
fi

echo ""
echo "âœ… All quality gates passed! Ready to push."
